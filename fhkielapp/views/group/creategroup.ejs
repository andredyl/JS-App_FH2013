<%- partial('../partials/header_authenticated')%>

<div id="content-section">
    <div class="page-header">
        <h1>Create Group</h1>
    </div>
    <% if( error !== undefined && error!==false){%>
        <div  class="alert alert-danger"><%= error %></div>
    <% }%>
    
    <div class="form-wrapper">
    <form method="post" action="/creategroup" class="form-horizontal" role="form" >
        <div class="form-group">
            <label for="inputPname" class="col-sm-2 control-label">Name:</label>
            <div class="col-sm-10">
            <input type="text" class="form-control input-sm" id="inputPname" name="pname">
            </div>
        </div>
        <div class="form-group">
            <label for="inputDesc" class="col-sm-2 control-label">Description:</label>
            <div class="col-sm-10">
                <textarea class="form-control input-sm" id="inputDesc" name="description"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2">
                <button type="submit" class="btn btn-primary btn-lg">Create</button>
            </div>
        </div>
    </form>
    </div>
</div>
<div id="chat-section">
    <%- partial('../chat/chat')%>
</div>

<%- partial('../partials/footer')%>

