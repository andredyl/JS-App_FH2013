<%- partial('../partials/header_authenticated')%>

<div id="content-section">
    <h1>Group</h1>

        <form method="post" action="/addmember">
            <p>
                <label>Add Member:</label>
                <select  name="uname" >
                    <% if (list.length > 0) {list.forEach(function(u) { %>
                    <option value="<%=u.username%>"><%=u.firstname+' '+u.lastname%></option>
                    <%});}%>
                </select>
            </p>
            <input type="submit" value="Add">
            </p>
        </form>


    <h2>Group Posts</h2>
    <p>
        <%history.forEach(function(u) { %>
        <tr><%=u.text%><br/></tr>
        <%});%>
    </p>
    <form method="post" action="/group">
        <p>
            <label>Post:</label>
            <input type="text" name="message">
        </p>
        <input type="submit" value="Post">
        </p>
    </form>

</div>
<div id="chat-section">
    <%- partial('../chat/chat')%>
</div>

<%- partial('../partials/footer')%>

